{
//  "include": ["src/**/*"],
  "include": ["src/components/ts/*"],
  "exclude": ["node_modules"],


  "compilerOptions": {
//    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
//    "paths": {
//      "$components/*": ["src/components/*"]
//    },


    // компиоириуем в ES5, по умолчанию ES3
    "target": "es2015",
    // не компилировать файлы, если есть ошибки
    "noEmitOnError": true,

    // разрешить недостижимый код
    "allowUnreachableCode": false,
    // строгий режим
    "alwaysStrict": true,
    // запрет на использование присвоения типу undefined в случаях type?: "dark" | "light"
    "exactOptionalPropertyTypes": true,
    // проверка на использование null и undefined, где ожидается конкретное значение
    "strictNullChecks": true,
    // любой непустой регистр внутри оператора switch включает либо break, либо return
    "noFallthroughCasesInSwitch": true
  }
}